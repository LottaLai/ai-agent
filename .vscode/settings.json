{

    // ==== Python 解譯器與檢查 ====
    "python.defaultInterpreterPath": "./restaurant_venv/Scripts/python.exe",
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.extraPaths": [
    "./",
    "./app",
    "./shared"
    ],
    "python.analysis.autoSearchPaths": true,
    "python.analysis.autoImportCompletions": true,
    "python.analysis.packageIndexDepths": [
        {
            "name": "app",
            "depth": 10
        }
    ],
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.formatting.provider": "black",
    // 自動導入設置
    "python.analysis.importFormat": "absolute",
    "python.analysis.completeFunctionParens": true,
    "python.analysis.autoImportUserSymbols": true,

    // ==== 編輯器常用設定 ====
    "editor.tabSize": 4, // Tab = 4 空格
    "editor.insertSpaces": true, // 用空格代替 Tab
    "editor.detectIndentation": false, // 不自動偵測縮排
    "editor.wordWrap": "on", // 自動換行
    "files.autoSave": "onFocusChange", // 切換視窗時自動儲存
    "files.trimTrailingWhitespace": true, // 儲存時移除多餘空格
    "files.insertFinalNewline": true, // 儲存時檔尾加換行


    // ==== 儲存時自動格式化 ====
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit",
        "source.fixAll": "explicit"
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter" // Black 格式化
    },
    // ==== 終端機 ====
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    "terminal.integrated.fontSize": 14,

    // ==== IntelliSense ====
    "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
    },
    "editor.suggestSelection": "first",
    "editor.parameterHints.enabled": true,

    "python.analysis.stubPath": "./typings",
    "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/*venv/": true
    },
}
